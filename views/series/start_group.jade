extends ../template/layout

block content
    link(rel='stylesheet', href='/javascripts/datetimepicker-master/jquery.datetimepicker.css')
    script(type='text/javascript', src='/javascripts/datetimepicker-master/build/jquery.datetimepicker.full.min.js')
    form(name="start_group", action="/group/create", method="post")
        .form-group
            h3= 'Starting rewatch group for - ' + series.title
            input(type="hidden", name="series_slug", value=series.slug)
            input.form-control(type="text", name="name", placeholder="Name for the group", required)
            input.form-control(type="text", name="description", placeholder="Description")
            input.form-control(type="text", name="main_link", placeholder="Discussion Forum Link")
            input.form-control(type="text", name="ref_link", placeholder="Reference Link")
            input.form-control(type="text", name="first_time", id="first_time", placeholder="Pick first time", value="")
            script(type='text/javascript').
                $('#first_time').datetimepicker();
            .selectContainer
                select.form-control(name="episodes") Episodes
                    option(value="")
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
            .selectContainer
                select.form-control(name="cycle") Cycle
                    option(value="")
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
            button.btn.btn-sm.btn-primary(type="submit", value="go") GO